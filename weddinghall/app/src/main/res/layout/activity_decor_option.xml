<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rematchka.weddinghall.decor_option">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Decoration options"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:id = "@+id/title"
         />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="add new item"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/add_decor_option"
        android:alpha="0.7"
        android:onClick="AddDecoration"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Update existing item"
        android:layout_below="@id/add_decor_option"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/edit_decor_option"
        android:onClick="UpdateDecoration"
        android:alpha="0.7"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="delete existing item"
        android:layout_below="@id/edit_decor_option"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/delete_decor_option"
        android:onClick="DeleteDecoration"
        android:alpha="0.7"
        />

</RelativeLayout>
