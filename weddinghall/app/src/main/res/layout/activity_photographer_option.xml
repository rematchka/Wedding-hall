<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rematchka.weddinghall.photographer_option"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Photography options"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:id = "@+id/title"
        android:textColor="#000000" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="add Photographer_photographer"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/add_photographer"
        android:onClick="AddPh"
        android:background="#ffffff"
        android:alpha="0.5"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Update photographer info"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/edit_photographer"
        android:onClick="UpdatePh"
        android:alpha="0.5"
        android:background="#ffffff"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="delete photographer"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/delete_photographer"
        android:onClick="DeletePh"
        android:background="#ffffff"
        android:alpha="0.5"
        android:layout_gravity="center"/>




</LinearLayout>
