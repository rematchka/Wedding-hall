<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rematchka.weddinghall.add_decor">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Add decoration item"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id = "@+id/title"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Item name:"
        android:textSize="20sp"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id = "@+id/name"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:inputType="textPersonName"
        android:ems="10"
        android:id= "@+id/entered_name_decor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Price:"
        android:textSize="20sp"
        android:layout_below="@id/entered_name_decor"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id = "@+id/price"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id ="@+id/entered_price_decor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Add"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="AddDecoration"
        android:id="@+id/add_decor_item"
        android:layout_below = "@id/entered_price_decor"/>



</RelativeLayout>
